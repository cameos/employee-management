@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div style="margin-top:10px; margin-left:auto; margin-right:auto; width:80%;" class="row">
        <!--modal to manage the employees-->
        <div class="modal fade" id="system-modal" aria-labelledby="system-modal-label" tabindex="-1" role="dialog" aria-hidden="true">
            <div class="modal-dialog">
                <div style="border-radius:1px; border:1px solid #e5e5e5; height:auto; margin:auto; margin-top:100px;" class="modal-content">
                    <div class="modal-header">
                        @*<a href="#" data-dismiss="modal" aria-hidden="true" class="close">x</a>*@
                        <h2 class="modal-title" style="color:#e5e5e5; width:100%;" id="system-modal-label">
                            <img src="~/Content/landscapes/hunting.png" style="display:inline-block; width:70px;height:70px;" class="img-responsive" /> employment system management
                        </h2>

                    </div>
                    <div style="color:#212121;" class="modal-body modal-body-style">
                       <div class="show-for-preloader" id="acme-append"></div>
                        <div id="acme-append-preloader" class="hide-for-preloader">
                            <div class="row">
                                <div class="text-center h4" style="font-weight:bold;">
                                    Please be patient while processing
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <a href="/Home/Index" class="btn btn-primary ok-btn">Close and go to home page</a>
                    </div>
                </div>
            </div>
        </div>

        <!--page to display the employees-->
        <div class="col-xs-12 col-sm-5">
            <div style="margin-top:25px;margin-left:auto; margin-right:auto;" class="row">
                <div class="text-left h3">
                    Welcome to manangement system
                </div>
                <div class="text-left">
                    Acme allows you to manage your person and employees system via RestFul services.<br />
                    Here we use web api services with ASP.NET MVC application.<br/>
                to learn more about this system click the button below to start using the system.
                </div><br />
                <button class="btn btn-primary ok-btn" id="btn-acme-start" type="button">Start to manage your system</button>
            </div>
        </div>
        <div class="col-xs-12 col-sm-5">
            <div style="margin-left: auto; margin-right: auto;" class="row">
                <img src="~/Content/landscapes/reindeer.png" class="img-responsive hidden-sm hidden-md hidden-lg" style="width:100%; height:250px;"/>
                <img src="~/Content/landscapes/reindeer.png" class="img-responsive hidden-xs hidden-md hidden-lg" style="width:100%; height:250px;" />
                <img src="~/Content/landscapes/reindeer.png" class="img-responsive hidden-xs hidden-sm " style="width:300px; height:300px;" />
            </div>
        </div>
    </div>
</div>
